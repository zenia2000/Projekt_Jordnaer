@page
@model Projekt_Jordnaer.Pages.Vagter.AddVagtModel
@{
    ViewData["Title"] = "Opret vagt";
}

<h1>Opret Vagt</h1>


<div class="" style="color: darkgreen">
    <h3>    Vagt type:</h3>
</div>


<p>
    Cafe: 1 <br />
    Cafeføl: 2 <br />
    Bager: 3 <br />
    Bagerføl: 4
</p>


<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label asp-for="@Model.Vagt.VagtName" class="control-label"></label>
                <input asp-for="@Model.Vagt.VagtName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Vagt.VagtDescription" class="control-label"></label>
                <input asp-for="@Model.Vagt.VagtDescription" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Vagt.VagtStart" class="control-label"></label>
                <input asp-for="@Model.Vagt.VagtStart" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Vagt.VagtEnd" class="control-label"></label>
                <input asp-for="@Model.Vagt.VagtEnd" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Vagt.VagtTypeID" class="control-label"></label>
                <input asp-for="@Model.Vagt.VagtTypeID" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Opret" class="btn btn-primary" style="background-color: green" />
            </div>
            <div class="form-group">
                <input type="submit" value="Annuller" asp-page-handler="Cancel" class="btn btn-primary" style="background-color: red" />
            </div>
        </form>
    </div>
</div>