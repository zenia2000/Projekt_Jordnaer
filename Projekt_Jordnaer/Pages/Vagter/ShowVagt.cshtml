@page
@model Projekt_Jordnaer.Pages.Vagter.ShowVagtModel
@{
    ViewData["Title"] = "Alle vagter";
}

<div class="form-group">
    <input type="submit" value="Opret ny vagt" asp-page-handler="Cancel" class="btn btn-primary" />
</div>

<p>
    <a asp-page="AddVagt">Lav ny vagt</a> 
</p>

<h2>VagtPlan:</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                Reg Nr
            </th>
            <th>
                Navn
            </th>
            <th>
                Descibtion
            </th>
            <th>
                Vagt Start
            </th>
            <th>
                Vagt Slut
            </th>
        </tr>
    </thead>
    <tbody>
       
        @if (Model.Vagts.Count() != 0)
        {
            @foreach (var item in Model.Vagts)
            {
                <tr>
                    <td>
                        @item.VagtId
                    </td>
                    <td>
                        @item.VagtName
                    </td>
                    <td>
                        @item.VagtDescription
                    </td>
                    <td>
                        @item.VagtStart
                    </td>
                    <td>
                        @item.VagtEnd
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
