<h2>VagtPlan:</h2>

<h3>Id skal kaldes b/bf/c/cf og et nummer. Bogstaver indikere typen af vagt lige nu</h3>

<table class="table">
    <thead>
        <tr>
            <th>
                Reg Nr
            </th>
            <th>
                Navn
            </th>
            <th>
                Description
            </th>
            <th>
                Vagt Start
            </th>
            <th>
                Vagt Slut
            </th>
        </tr>
    </thead>
    <tbody>
       
        @if (Model.Vagts.Count() != 0)
        {
            @foreach (var item in Model.Vagts)
            {
                <tr>
                    <td>
                        @item.VagtId
                    </td>
                    <td>
                        @item.VagtName
                    </td>
                    <td>
                        @item.VagtDescription
                    </td>
                    <td>
                        @item.VagtStart
                    </td>
                    <td>
                        @item.VagtEnd
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
