@page
@model Projekt_Jordnaer.Pages.Medlemmer.DeleteMemberModel
@{
    ViewData["Title"] = "Slet medlem";
}

<h1>Slet medlem</h1>

<h3>Her kan du slette et medlem</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.MemberToDelete.MemberID" class="control-label"></label>
                <input asp-for="@Model.MemberToDelete.MemberID" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="@Model.MemberToDelete.Name" class="control-label"></label>
                <input asp-for="@Model.MemberToDelete.Name" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.MemberToDelete.Address" class="control-label"></label>
                <input asp-for="@Model.MemberToDelete.Address" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.MemberToDelete.Email" class="control-label"></label>
                <input asp-for="@Model.MemberToDelete.Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="@Model.MemberToDelete.PhoneNr" class="control-label"></label>
                <input asp-for="@Model.MemberToDelete.PhoneNr" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="@Model.MemberToDelete.Certificate" class="control-label"></label>
                <input type="checkbox" asp-for="@Model.MemberToDelete.Certificate" value="false" disabled />
            </div>
            <div class="form-group">
                <label asp-for="@Model.MemberToDelete.Admin" class="control-label"></label>
                <input type="checkbox" asp-for="@Model.MemberToDelete.Admin" value="false" disabled />
            </div>
            <div class="form-group">
                <input type="submit" value="Slet medlem" class="btn btn-primary" style="background-color: green" />
            </div>
            <div class="form-group">
                <input type="submit" value="Annuller" asp-page-handler="Cancel" class="btn btn-primary" style="background-color: red" />
            </div>
        </form>
    </div>
</div>
